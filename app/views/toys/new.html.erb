<% provide(:title, "New Toy")%>
<h1>New Toy</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @toy) do |f| %>
      <%= render "shared/error_messages", object: f.object%>

      <%= f.label :name, class: "form-label" %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :description, class: "form-label" %>
      <%= f.text_area :description, class: "form-control"%>

      <div class="mb-3" data-controller="multiple_images" id = "Img">
        <%#=f.label :images, class: "form-label"  %>
        <%#= f.file_field :images, multiple: true, class: "form-control", accept: "image/png, image/jpeg, image/jpg", "data-multiple_images-target": "input", "data-action": "multiple_images#preview" %>
      </div>

      <%= render "file_form", f: f %>

      <%= f.submit "Create", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>